    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name-here",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Odoo",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "/usr/bin/python3",
            "console": "integratedTerminal",
            "program": "/media/erie1s/mywork/ERP/ocb11/odoo-bin",
            "args": [
                "-w ocb11 -r ocb11 --addons-path=/media/eries/mywork/ERP/ocb11/addons/,/media/eries/mywork/ERP/custom_addons/master_project_aplikasi_sekolah/ --pg_path=/usr/bin/ --xmlrpc-port=8069 -u siswa_ocb11,siswa_keu_ocb11,siswa_tab_ocb11,siswa_psb_ocb11",
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "Odoo 2",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "/usr/bin/python3",
            "program": "/media/eries/mywork/ERP/ocb11/odoo-bin",
            "args": [
                "-w ocb11", 
                "-r ocb11", 
                "--addons-path=/media/eries/mywork/ERP/ocb11/addons/,/media/eries/mywork/ERP/custom_addons/master_project_aplikasi_sekolah/",
                "--pg_path=/usr/bin/",
                "--xmlrpc-port=8069",
                "-u siswa_ocb11,siswa_keu_ocb11,siswa_tab_ocb11,siswa_psb_ocb11",
            ],
            "cwd": "${workspaceRoot}",
            "console": "externalTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
    ]
}