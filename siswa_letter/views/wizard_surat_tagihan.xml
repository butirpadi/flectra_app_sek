<odoo>
    <data>

        <record id="wizard_surat_tagihan" model="ir.ui.view">
            <field name="name">wizard.surat.tagihan</field>
            <field name="model">siswa.wizard.surat.tagihan</field>
            <field name="arch" type="xml">
                <form duplicate="0" string="Surat Tagihan" class="o_sale_order" create="false">
                    <sheet>
                        <div class="oe_title oe_read_only">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tahunajaran_id" options="{'no_create':True, 'no_edit':True, 'no_create_edit': True, 'no_open':True}" />
                                <field name="jenjang_ids" widget="many2many_tags" options="{'no_create':True, 'no_edit':True, 'no_create_edit': True, 'no_open':True}" />                                
                            </group>
                            <group>
                                <field name="rombel_ids" widget="many2many_tags" options="{'no_create':True, 'no_edit':True, 'no_create_edit': True, 'no_open':True}" />
                            </group>
                        </group>
                        <footer class="oe_edit_only">
                            <button name="action_save" type="object" string="Submit" class="oe_highlight"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window
            id="wizard_surat_tagihan_action"
            name="Surat Tagihan"
            src_model="siswa_keu_ocb11.siswa_biaya"
            res_model="siswa.wizard.surat.tagihan"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            />

    </data>
</odoo>