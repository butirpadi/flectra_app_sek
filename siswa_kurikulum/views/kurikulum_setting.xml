<odoo>
    <data>
        <record id="kurikulum_setting_form" model="ir.ui.view">
            <field name="name">kurikulum.setting.form</field>
            <field name="model">kurikulum.setting</field>
            <field name="arch" type="xml">
                <form duplicate="0" string="kurikulum Setting" create="false" delete="false" class="oe_form_configuration">
                    <header>
                        <button string="Save" type="object" name="write" class="oe_highlight" />
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group >
                        <group>
                            <field name="is_two_step_approval" />
                            <field name="first_approval_id" />
                            <field name="first_job_id" readonly="1" />
                        </group>
                        <group attrs="{'invisible':[('is_two_step_approval', '!=', True)]}">
                            <div style="height:26px;"></div>
                            <field name="second_approval_id" />
                            <field name="second_job_id" readonly="1" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kurikulum_setting_action">
            <field name="name">kurikulum Setting</field>
            <field name="res_model">kurikulum.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'form', 'view_id': ref('kurikulum_setting_form')})
                ]"/>
            <field name="target">inline</field>
            <field name="res_id" ref="_general_kurikulum_setting" />
        </record>

    </data>
</odoo>