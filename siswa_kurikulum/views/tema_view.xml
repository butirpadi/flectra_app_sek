<odoo>
    <data>
        <record model="ir.ui.view" id="tema_list_view">
            <field name="name">siswa.tema.list.view</field>
            <field name="model">siswa.tema</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tema_action_window">
            <field name="name">Tema Pembelajaran</field>
            <field name="res_model">siswa.tema</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="tema_form_view" model="ir.ui.view">
            <field name="name">siswa.tema.form</field>
            <field name="model">siswa.tema</field>
            <field name="arch" type="xml">
                <form duplicate="0" string="Tema" class="o_sale_order">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ************************ SUBTEMA ************************ -->

        <record model="ir.ui.view" id="subtema_list_view">
            <field name="name">siswa.subtema.list.view</field>
            <field name="model">siswa.subtema</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tema_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="subtema_action_window">
            <field name="name">Subtema Pembelajaran</field>
            <field name="res_model">siswa.subtema</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="subtema_form_view" model="ir.ui.view">
            <field name="name">siswa.subtema.form</field>
            <field name="model">siswa.subtema</field>
            <field name="arch" type="xml">
                <form duplicate="0" string="subtema" class="o_sale_order">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tema_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>