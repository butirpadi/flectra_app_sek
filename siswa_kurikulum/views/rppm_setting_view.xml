<odoo>
    <data>

        <record id="rppm_setting_form" model="ir.ui.view">
            <field name="name">rppm.setting.form</field>
            <field name="model">rppm.setting</field>
            <field name="arch" type="xml">
                <form duplicate="0" string="RPPM Setting" class="o_sale_order">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="tahunajaran_id" options='{"no_open": True, "no_create_edit":True,"no_edit":True, "no_create":True}' context="{'active_test': False}" />
                            </group>
                            <group>
                                <field name="aktif" widget="boolean_toggle" />
                            </group>
                        </group>
                        <div class="o_horizontal_separator">Kategori Muatan</div>
                        <field name="kategori_muatan_ids">
                            <tree editable="bottom" default_order="sort_order">
                                <field name="kategori_muatan_id" />
                                <field name="sort_order" invisible="1" />
                                <button type="object" string="Up" name="shiftUp" />
                                <button type="object" string="Down" name="shiftDown" />
                            </tree>
                        </field>
                        <group string="Approval">
                            <group>
                                <field name="is_two_step_approval" />
                                <field name="first_approval_id" />
                                <field name="first_job_id" readonly="1" />
                            </group>
                            <group attrs="{'invisible':[('is_two_step_approval', '!=', True)]}">
                                <div style="height:26px;"></div>
                                <field name="second_approval_id" />
                                <field name="second_job_id" readonly="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="rppm_list_view">
            <field name="name">rppm.list.view</field>
            <field name="model">rppm.setting</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tahunajaran_id"/>
                    <field name="aktif" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="rppm_setting_action">
            <field name="name">RPPM Setting</field>
            <field name="res_model">rppm.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('rppm_list_view')}), 
                (0, 0, {'view_mode': 'form', 'view_id': ref('rppm_setting_form')})
                ]"/>
        </record>

    </data>
</odoo>