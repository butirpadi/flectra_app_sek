<odoo>
    <data>
        <report id="report_label_identitas_action" model="wizard.label.identitas" string="Label Identitas" report_type="qweb-html" name="siswa_ocb11.report_label_identitas" file="siswa_ocb11.report_label_identitas" attachment_use="False" print_report_name="'LabelIdentitas'" menu="False" paperformat="siswa_ocb11.format_report_free_layout" />
    </data>
    <template id="report_label_identitas">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <style>
                            table.table, table.table tbody tr td{
                                background-color:transparent!important;
                            }

                            table.table.noborder, table.table.noborder tbody tr td{
                                border:none!important;
                                padding:0;
                                margin:0;
                            }

                            table.datasiswa {
                                margin:5px;
                            }
                        </style>

                        <div class="row" >
                            <t t-foreach="o.rombel_siswa_ids" t-as="siswa">
                                <div class="col-xs-4 " style="border:solid thin darkgrey;padding:5px;">
                                    <div class="row">
                                        <div class="col-xs-12 text-center">
                                            <t t-if="user.company_id.report_logo">
                                                <span t-field="user.company_id.report_logo" t-field-options='{"widget": "image"}' style="max-width:150px;" />
                                            </t>
                                            <t t-if="not user.company_id.report_logo">
                                                <img src='/web/binary/company_logo' style="max-width:150px;vertical-align:middle;text-align:center;" />
                                            </t>
                                        </div>
                                        <div class="col-xs-12">
                                            <table class="table noborder datasiswa">
                                                <tbody>
                                                    <tr>
                                                        <td class="text-center">
                                                            <strong t-esc="siswa.siswa_id.name" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-center">
                                                            <t t-if="o.default_siswa_number=='nis'">
                                                                <t t-esc="siswa.siswa_id.nis" />
                                                            </t>
                                                            <t t-if="o.default_siswa_number=='induk'">
                                                                <t t-esc="siswa.siswa_id.induk" />
                                                            </t>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-center">
                                                            <t t-esc="siswa.rombel_id.name" />
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <p style="page-break-after:always;"></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>