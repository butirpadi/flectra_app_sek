<odoo>
    <data>

        <record id="format_form_presensi_siswa" model="report.paperformat">
            <field name="name">Report Bukti Pembayaran</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
        </record>

        <report id="report_form_presensi_action" model="siswa_ocb11.wizard_report_form_presensi" string="Form Presensi" report_type="qweb-html" name="siswa_ocb11.report_form_presensi" file="siswa_ocb11.report_form_presensi" attachment_use="False" print_report_name="'FormPresensiSiswa-%s' % (object.tahunajaran_id.name + '-' + object.rombel_id.name)" menu="False" paperformat="siswa_ocb11.format_form_presensi_siswa" />

        <template id="report_form_presensi">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <style>
                                table.table, table.table tbody tr td{
                                    background-color:transparent!important;
                                }

                                table.table.noborder, table.table.noborder tbody tr td{
                                    border:none!important;
                                }
                            </style>
                            <div class="row">
                                <div class="col-xs-3">
                                    <t t-if="user.company_id.report_logo">
                                        <span t-field="user.company_id.report_logo" t-field-options='{"widget": "image"}' />
                                    </t>
                                    <t t-if="not user.company_id.report_logo">
                                        <img src='/web/binary/company_logo' style="max-height:60px" />
                                    </t>
                                </div>
                                <div class="col-xs-9">
                                    <h3 style="margin:0;padding:0;" >
                                        <strong>DAFTAR PRESENSI SISWA</strong>
                                    </h3>
                                    <span t-esc="o.tahunajaran_id.name" />
                                </div>
                                <div class="col-xs-12">
                                    <hr style="border-top: 4px double black;" />
                                    <table class="table noborder">
                                        <tbody>
                                            <tr>
                                                <td class="col-xs-3">Rombongan Belajar</td>
                                                <td style="width:10px;">:</td>
                                                <td class="col-xs-4">
                                                    <span t-field="o.rombel_id.name" />
                                                </td>
                                                <td class="col-xs-2">Tanggal</td>
                                                <td style="width:10px;">:</td>
                                                <td>
                                                    <span t-field="o.tanggal" t-field-options='{"format": "dd MMMM y"}'/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    <table class="table table-bordered table-condensed">
                                        <thead>
                                            <tr>
                                                <th rowspan="2" style="width:50px;vertical-align:middle;" >No</th>
                                                <th rowspan="2" class="col-xs-2 text-center" style="vertical-align:middle;">
                                                    <t t-if="o.default_siswa_number=='nis'">
                                                        <strong>NIS</strong>
                                                    </t>
                                                    <t t-if="o.default_siswa_number=='induk'">
                                                        <strong>Siswa ID</strong>
                                                    </t>
                                                </th>
                                                <th rowspan="2" style="vertical-align:middle;">Nama</th>
                                                <th rowspan="2" class="col-xs-2" style="vertical-align:middle;">Panggilan</th>
                                                <th style="width:150px;" colspan="4" class="text-center">Kehadiran</th>
                                            </tr>
                                            <tr>
                                                <th style="width:30px;" class="text-center">H</th>
                                                <th style="width:30px;" class="text-center">I</th>
                                                <th style="width:30px;" class="text-center">S</th>
                                                <th style="width:30px;" class="text-center">A</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="t_index" t-value="1" />
                                            <t t-foreach="o.siswa_ids.sorted(key=lambda x: x.induk)" t-as="sis">
                                                <tr>
                                                    <td>
                                                        <span t-esc="t_index" />
                                                    </td>
                                                    <td class="col-xs-1 text-center">
                                                        <t t-if="o.default_siswa_number=='nis'">
                                                            <span t-field="sis.nis" />
                                                        </t>
                                                        <t t-if="o.default_siswa_number=='induk'">
                                                            <span t-field="sis.induk" />
                                                        </t>
                                                    </td>
                                                    <td>
                                                        <span t-field="sis.name" />
                                                    </td>
                                                    <td>
                                                        <span t-field="sis.panggilan" />
                                                    </td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                                <t t-set="t_index" t-value="t_index+1" />
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>