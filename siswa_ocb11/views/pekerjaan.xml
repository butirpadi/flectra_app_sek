<odoo>
	<data>
		<record id="pekerjaan_form_view" model="ir.ui.view">
            <field name="name">pekerjaan.form.view</field>
            <field name="model">siswa_ocb11.pekerjaan</field>
            <field name="arch" type="xml">
                <form duplicate="0" string="Pekerjaan" class="o_sale_order">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

		<!-- actions opening views on models -->
		<record model="ir.actions.act_window" id="siswa_ocb11.pekerjaan_action_window">
			<field name="name">Pekerjaan</field>
			<field name="res_model">siswa_ocb11.pekerjaan</field>
			<field name="view_mode">tree,form</field>
		</record>


	</data>
</odoo>