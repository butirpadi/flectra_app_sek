<odoo>
	<data>
		<record id="view_rombel_dashboard_kanban_form"
			model="ir.ui.view">
			<field name="name">rombel.dashboard.ocb11.kanban</field>
			<field name="model">siswa_ocb11.rombel_dashboard</field>
			<field name="arch" type="xml">
				<kanban
					class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_stock_kanban"
					create="0">
					<field name="color" />
					<templates>
						<t t-name="kanban-box">
							<div t-attf-class="#{kanban_color(record.color.raw_value)}">
								<div>
									<div t-attf-class="o_kanban_card_header">
										<div class="o_kanban_card_header_title">
											<div class="o_primary">
												<strong><field name="rombel_id" /></strong>
											</div>
											<div class="o_secondary">
												<field class="o_secondary" name="tahunajaran_id" />
												<label class="pull-right">
													<field name="company_id"
														options="{'no_create': True}"
														groups="base.group_multi_company" />
												</label>
											</div>
										</div>
										<div class="o_kanban_manage_button_section">
											<a class="o_kanban_manage_toggle_button" href="#">
												<i class="fa fa-ellipsis-v" />
											</a>
										</div>
									</div>
									<div class="container o_kanban_card_content">
										<div class="row">
											<div class="col-xs-6 o_kanban_primary_left">
												<button class="btn btn-primary"
													name="get_view_rombel" type="object">
													<span>
														<field name="jumlah_siswa" />
														Siswa
													</span>
												</button>
											</div>
											<div class="col-xs-6 o_kanban_primary_right">
												<div class="row">
													<div class="col-xs-9">
														<a name="get_view_rombel_laki" type="object">
															Laki-laki
														</a>
													</div>
													<div class="col-xs-3 text-right">
														<field name="jumlah_laki" />
													</div>
												</div>
												<div class="row">
													<div class="col-xs-9">
														<a name="get_view_rombel_perempuan" type="object">
															Perempuan
														</a>
													</div>
													<div class="col-xs-3  text-right">
														<field name="jumlah_perempuan" />
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="container o_kanban_card_manage_pane">
										<div class="row">
											<div
												class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_view">
												<div class="o_kanban_card_manage_title">
													<label>Set Color</label>
												</div>
											</div>
										</div>
										<div t-if="widget.editable"
											class="o_kanban_card_manage_settings row">
											<div class="col-xs-12">
												<ul class="oe_kanban_colorpicker" data-field="color" />
											</div>
										</div>
									</div>
								</div>
							</div>
						</t>

					</templates>
				</kanban>
			</field>
		</record>

		<record model="ir.actions.act_window"
			id="siswa_ocb11.rombel_dashboard_view_action">
			<field name="name">Dashboard</field>
			<field name="res_model">siswa_ocb11.rombel_dashboard</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban</field>
			<field name="domain">[('tahunajaran_id.active','=',True)]</field>
			<field name="form_view_id"
				ref="siswa_ocb11.view_rombel_dashboard_kanban_form" />
		</record>

		<!-- detail rombel dashboard, tampilkan rombel_siswa -->
		<record model="ir.actions.act_window"
			id="siswa_ocb11.siswa_per_rombel_action_window">
			<field name="name">Siswa</field>
			<field name="res_model">siswa_ocb11.rombel_siswa</field>
			<field name="view_mode">tree</field>
			<field name="search_view_id"
				ref="siswa_ocb11.view_rombel_siswa_filter" />
		</record>

		<!-- Dashboard Manager -->
		<record model="ir.ui.view"
			id="siswa_ocb11.rombel_dashboard_manager_list">
			<field name="name">siswa_ocb11_rombel_dashboard_manager_list</field>
			<field name="model">siswa_ocb11.rombel_dashboard</field>
			<field name="arch" type="xml">
				<tree>
					<field name="tahunajaran_id" />
					<field name="rombel_id" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window"
			id="siswa_ocb11.rombel_dashboard_manager_view_action">
			<field name="name">Dashboard Manager</field>
			<field name="res_model">siswa_ocb11.rombel_dashboard</field>
			<field name="view_mode">tree, form</field>
			<field name="context">{'group_by':'rombel_id'}</field>
			<field name="tree_view_id"
				ref="siswa_ocb11.rombel_dashboard_manager_list" />
		</record>

	</data>
</odoo>